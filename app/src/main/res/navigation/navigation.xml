<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation.xml"
    app:startDestination="@id/contactListFragment">

  <fragment
      android:id="@+id/contactListFragment"
      android:name="com.antropov.talk.contactlist.ContactListFragment"
      android:label="NotesApp"
      tools:layout="@layout/contact_list_fragment">
    <action
        android:id="@+id/action_contactListFragment_to_noteFragment"
        app:destination="@+id/noteFragment"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right" />
    <argument
        android:name="taskId"
        app:argType="string" />
  </fragment>
  <fragment
      android:id="@+id/noteFragment"
      android:name="com.antropov.talk.note.NoteFragment"
      android:label="Note"
      tools:layout="@layout/note_fragment" >
    <action
        android:id="@+id/action_noteFragment_to_contactListFragment"
        app:destination="@id/contactListFragment" />
  </fragment>
</navigation>