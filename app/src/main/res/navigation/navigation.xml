<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation.xml"
    app:startDestination="@id/contactListFragment">

  <fragment
      android:id="@+id/contactListFragment"
      android:name="com.antropov.talk.noteslist.NotesListFragment"
      android:label="NotesApp">
    <action
        android:id="@+id/action_contactListFragment_to_noteFragment"
        app:destination="@id/noteFragment"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right"
        app:popUpToInclusive="true" />
  </fragment>
  <fragment
      android:id="@+id/noteFragment"
      android:name="com.antropov.talk.note.NoteFragment"
      android:label="Note"
      tools:layout="@layout/note_fragment" >
    <action
        android:id="@+id/action_noteFragment_to_contactListFragment"
        app:destination="@id/contactListFragment"
        app:enterAnim="@anim/slide_in_left"
        app:exitAnim="@anim/slide_out_right"
        app:popEnterAnim="@anim/slide_in_right"
        app:popExitAnim="@anim/slide_out_left"
        app:popUpTo="@+id/contactListFragment"
        app:popUpToInclusive="true" />
    <argument
        android:name="noteId"
        android:defaultValue="-1"
        app:argType="integer" />
  </fragment>
</navigation>